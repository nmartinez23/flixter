<!DOCTYPE html>
<html>
<head>
  <title>Flixter</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link href="//vjs.zencdn.net/5.0.2/video-js.css" rel="stylesheet">
  <script src="//vjs.zencdn.net/5.0.2/video.js"></script>
</head>
<body>

<div id="wrap">
<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Flixter</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to 'See All Courses', courses_path %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      	<% if user_signed_in? %>
          <li><%= link_to 'My Dashboard', dashboard_path %></li>
      		<li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
      	<% else %>
      		<li><%= link_to 'Sign in', new_user_session_path %></li>
      		<li><%= link_to 'Sign up', new_user_registration_path %></li>
      	<% end %>
        <li><a href="#">Link</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% if notice.present? %>
	<p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
<p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

</div>
<br class="clr" />

<div id="footer">
  <div class="container">
    <div class="col-xs-12 col-sm-3">
      <b>Teachers</b>
      <br />
      <%= link_to 'Teach a Course', new_instructor_course_path %>
      <br />
      <%= link_to 'My Dashboard', dashboard_path %>
    </div>
    <div class="col-xs-12 col-sm-3">
      <b>About</b>
      <br />
      <%= link_to 'Team', '#' %>
      <br />
      <%= link_to 'Careers', '#' %>
      <br />
      <%= link_to 'Privacy Policy', '#' %>
    </div>
    <div class="col-xs-12 col-sm-3">
      <b>Contact</b>
      <br />
      nma@geezmail.com
      <br />
      One Main Street
      <br />
      Pittsburg CA, 94565
    </div>
    <div class="col-xs-12 col-sm-3 social">
      <b>Social</b>
      <br />
      <br />
      <%= link_to 'https://github.com/nmartinez23' do %>
        <%= image_tag 'github.png', class: 'social-button' %>
      <% end %>
      <%= link_to 'http://fb.com' do %>
        <%= image_tag 'fbook.png', class: 'social-button' %>
      <% end %>
      <%= link_to 'http://twitter.com' do %>
        <%= image_tag 'twit.png', class: 'social-button' %>
      <% end %>
    </div>
  </div>
</div>

</body>
</html>
